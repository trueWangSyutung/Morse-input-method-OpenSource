<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/appBackground"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/key_background_light"
    >
    <LinearLayout
        android:id="@+id/houxuan"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:padding="15dp"
        android:layout_marginBottom="10dp"
        android:gravity="fill"
        android:layout_gravity="fill_horizontal"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:visibility="gone"
        android:background="@drawable/background_light"

        >

        <LinearLayout
            android:id="@+id/pinyin_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"

            android:gravity="center_vertical"
            android:layout_gravity="start"
            android:orientation="horizontal">



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            >
            <ImageButton
                android:id="@+id/down"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:background="@mipmap/down_light"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:padding="15dp"
        android:layout_marginBottom="10dp"
        android:gravity="fill"
        android:layout_gravity="fill_horizontal"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:background="@drawable/background_light"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageButton
                android:id="@+id/help"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:background="@mipmap/help_light"
                />
            <ImageButton
                android:id="@+id/settings"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/settings_light"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="4"
            android:layout_gravity="end"
            android:gravity="end"
            android:layout_marginRight="30dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageButton
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/back_light"
                />
        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:id="@+id/more_bar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:background="@drawable/background_light"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/more_houxuan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="start"
                    android:orientation="horizontal">





                </LinearLayout>

            </LinearLayout>



        </ScrollView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/keyBar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"

        android:background="@drawable/background_light"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:paddingTop="40dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageButton
                android:id="@+id/dots"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:src="@mipmap/dots"
                android:layout_marginRight="31dp"
                android:background="@drawable/key_background"
                />
            <ImageButton
                android:id="@+id/lines"
                android:layout_width="135dp"
                android:src="@mipmap/lines"
                android:layout_marginLeft="31dp"
                android:layout_height="135dp"
                android:background="@drawable/key_background"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lau_container"
            android:layout_width="wrap_content"
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="30dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="20dp"

            android:background="@drawable/newtext_background"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_weight="3"
                android:textAlignment="center"
                android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/ime"
                android:layout_width="40dp"

                android:layout_height="40dp"
                android:layout_marginEnd="100dp"
                android:background="@mipmap/ime_light"
                android:padding="5dp"
                android:scaleType="fitCenter">

            </ImageButton>


            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:textAlignment="center"
                android:layout_weight="3"

                android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/lau"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:layout_marginStart="150dp"
                android:background="@mipmap/english_light"
                android:padding="5dp"
                android:scaleType="fitCenter">

            </ImageButton>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>